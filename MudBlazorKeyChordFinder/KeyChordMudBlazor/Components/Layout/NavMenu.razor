    </MudNavLink>
    <MudNavLink Href="/ear-training" Match="NavLinkMatch.Prefix">
        <MudIcon Icon="@Icons.Material.Filled.Hearing" /> Ear Training
    </MudNavLink>
    <MudNavLink Href="/contact-us" Match="NavLinkMatch.Prefix">
        <MudIcon Icon="@Icons.Material.Filled.Email" /> Contact Us
