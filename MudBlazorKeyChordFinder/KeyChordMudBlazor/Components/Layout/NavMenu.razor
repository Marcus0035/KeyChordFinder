        <MudIcon Icon="@Icons.Material.Filled.Bolt" /> Chord Finder
    </MudNavLink>
    <MudNavLink Href="/chord-progressions" Match="NavLinkMatch.Prefix">
        <MudIcon Icon="@Icons.Material.Filled.Piano" /> Chord Progressions
    </MudNavLink>
    <MudNavLink Href="/music-theory" Match="NavLinkMatch.Prefix">
        <MudIcon Icon="@Icons.Material.Filled.Book" /> Music Theory
